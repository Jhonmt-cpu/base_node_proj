{
  "name": "easy_find_server",
  "version": "1.0.0",
  "description": "Server for the Easy Find App",
  "author": "Jo√£o Mateus",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "dev:debug": "ts-node-dev -r tsconfig-paths/register --inspect=0.0.0.0:9229 --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "migrate:make": "knex --knexfile src/shared/infra/database/knexfile.ts migrate:make",
    "migrate:up": "knex --knexfile src/shared/infra/database/knexfile.ts migrate:up",
    "migrate:down": "knex --knexfile src/shared/infra/database/knexfile.ts migrate:down",
    "seed:make": "knex --knexfile src/shared/infra/database/knexfile.ts seed:make",
    "test": "jest --runInBand --detectOpenHandles --forceExit"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.7.0",
    "prettier": "^2.3.2",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "*"
  },
  "dependencies": {
    "celebrate": "^15.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "joi": "^17.11.0",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "tsyringe": "^4.8.0"
  }
}
